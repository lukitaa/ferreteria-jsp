<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <!-- SERVLETS LIST -->
    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>servlets.IndexServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Users</servlet-name>
        <servlet-class>servlets.UsersServlet</servlet-class>
    </servlet>
    <!-- URL MAPPING -->
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Products</servlet-name>
        <servlet-class>servlets.ProductsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PurchaseServlet</servlet-name>
        <servlet-class>servlets.PurchaseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>servlets.AddUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditUserServlet</servlet-name>
        <servlet-class>servlets.EditUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Historic</servlet-name>
        <servlet-class>servlets.HistoricServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HistoricDetailServlet</servlet-name>
        <servlet-class>servlets.HistoricDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/index</url-pattern>
        <!--<url-pattern>/</url-pattern> Warning: THIS WILL LOAD INDEX ALWAYS!-->
        <url-pattern/>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Products</servlet-name>
        <url-pattern>/productos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PurchaseServlet</servlet-name>
        <url-pattern>/productos/compra</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersServlet</servlet-name>
        <url-pattern>/usuarios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/usuarios/agregar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditUserServlet</servlet-name>
        <url-pattern>/usuarios/editar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Historic</servlet-name>
        <url-pattern>/historial</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HistoricDetailServlet</servlet-name>
        <url-pattern>/historial/cliente</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <!--
    Hide 404 page for development environment is not helpful
    <error-page>
        <error-code>404</error-code>
        <location>/index</location>
    </error-page>
    -->
</web-app>
